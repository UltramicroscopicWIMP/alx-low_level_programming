#include "main.h"
#include <stdlib.h>

/**
*malloc_checked - allocates memory using malloc
*@b: unsigned int. The size of memory to be allocated with malloc
*
*Return: void. Returns pointer to void. issues 98 exit status on failure
void *malloc_checked(unsigned int b)
{
	void *ptr = malloc(b);

	if (ptr == NULL)
	{
		exit (98);
	}
	return (ptr);
}
